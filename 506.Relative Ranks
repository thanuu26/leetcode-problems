class Solution {
    public String[] findRelativeRanks(int[] score) {
        int n=score.length;
        Integer[] indices=new Integer[n];
        for(int i=0;i<n;i++){
            indices[i]=i;
        }
        Arrays.sort(indices,(a,b)->score[b]-score[a]);
        String[] res=new String[n];
        String[] medal={"Gold Medal", "Silver Medal", "Bronze Medal"};
        for(int i=0;i<n;i++){
            if(i<3){
                res[indices[i]]=medal[i];
            }
            else{
                res[indices[i]]=String.valueOf(i+1);
            }
        }  
        return res;       
    }
}
