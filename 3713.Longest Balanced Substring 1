class Solution {
    public int longestBalanced(String s) {
        int n=s.length();
        int maxLen=0;
        for(int i=0;i<n;i++){
            int[] freq=new int[26];
            int distinct=0;
        int maxFreq=0;
        for(int j=i;j<n;j++){
            int index=s.charAt(j)-'a';
            freq[index]++;
            if(freq[index]==1){
                distinct++;
            }
            maxFreq=Math.max(maxFreq,freq[index]);
            if(distinct*maxFreq==j-i+1){
                maxLen=Math.max(maxLen,j-i+1);
            }
        }
        }
    return maxLen;    
    }
}
